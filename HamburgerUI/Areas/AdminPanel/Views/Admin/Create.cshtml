@model HamburgerMVC.SERVICE.Models.Dtos.MenuCreateDTO

@{
    Layout = "_LayoutAdmin";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Menu Ekle</h4>
